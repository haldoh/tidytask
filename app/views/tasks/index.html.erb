<h1>Tasks</h1>

<div id="tasks">
  <% @tasks.each do |task| %>
    <div class="task">
      <%= link_to task.title, task_path(task) %>
      <%= form_with(model: task, class: "inline") do |f| %>
        <%= f.check_box :completed, onchange: 'this.form.submit();' %>
      <% end %>
    </div>
  <% end %>
</div>

<%= link_to "New task", new_task_path, class: "button" %> 